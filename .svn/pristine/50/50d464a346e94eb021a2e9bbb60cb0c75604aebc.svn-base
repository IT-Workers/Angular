						<p>{{message.sendTime | date:'HH:mm'}}</p>
						<img ng-src="resource/img/user.jpg">
						<span ng-class="message.from == user.clientId ? 'right-anchor' : 'left-anchor'"></span>
						<section>
							<span word={{message.body}}></span>
						</section>
					</li>
					
